<div class="text-center">
  <h2>{{post}}</h2>

  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <span class="band-name">{{band.name}}</span>

  </p>
  <form class="form new-comment-form">
    {{!-- <div class="form-group">
      <label for="band-name">Band Name:</label>
      <input class="form-input" type="string" id="band-name" name="band-name" />
    </div> --}}
    <div class="form-group">
      <label for="comment-desc">Comment:</label>
      <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
    </div>
    <input id="comment-post-id" type="hidden" value="{{id}}"></input>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
  <div class="col-md-6 project-list">
    <h3>Comments:</h3>
    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <p>{{comment.user.name}}</p>
        <h4>{{comment.comment}}</h4>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<script src="/js/post.js"></script>